open :kursor for
'select * from (
select
  wr_pole_1_t firma
, wr_pole_2_t okres
, wr_pole_1_l kwota
from bctt_wyniki_raportow) A
PIVOT
   ( SUM(kwota)
     FOR okres
     IN ('||v_okresy||')
)';